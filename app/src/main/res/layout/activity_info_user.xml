<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoUserActivity"
    android:background="#D0D0D0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/purple">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:id="@+id/image_pp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:background="@drawable/no_profile_pic" />

            <TextView
                android:id="@+id/txtShhowWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_pp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Chargement..."
                android:textColor="@color/white"
                android:textSize="26dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="#FFFFFF">

            <ImageView
                android:id="@+id/ic_1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_baseline_person_outline_24" />

            <TextView
                android:id="@+id/txt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:text="Chargement..."
                android:textColor="#000000"
                android:textSize="18sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/txt_1"
                android:background="@android:color/darker_gray"
                android:id="@+id/divider_1"/>

            <ImageView
                android:id="@+id/ic_2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_1"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_baseline_attach_money_24" />

            <TextView
                android:id="@+id/txt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_1"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:text="Chargement..."
                android:textColor="#FF0000"
                android:textSize="18sp" />
            <View
                android:id="@+id/divider_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/txt_2"
                android:background="@android:color/darker_gray"/>

            <ImageView
                android:id="@+id/ic_3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_2"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_baseline_list_alt_24" />

            <TextView
                android:id="@+id/txt_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_2"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:text="Chargement..."
                android:textColor="#000000"
                android:textSize="18sp" />
            <View
                android:id="@+id/divider_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/txt_3"
                android:background="@android:color/darker_gray"/>

            <ImageView
                android:id="@+id/ic_4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_3"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_baseline_hub_24" />

            <TextView
                android:id="@+id/txt_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_3"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:text="Chargement..."
                android:textColor="#000000"
                android:textSize="18sp" />
            <View
                android:id="@+id/divider_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/txt_4"
                android:background="@android:color/darker_gray"/>

            <ImageView
                android:id="@+id/ic_5"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_4"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_baseline_diversity_1_24" />

            <TextView
                android:id="@+id/txt_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_4"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:text="Chargement..."
                android:textColor="#000000"
                android:textSize="18sp" />
            <View
                android:id="@+id/divider_5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/txt_5"
                android:background="@android:color/darker_gray"/>

            <ImageView
                android:id="@+id/ic_6"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_5"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_baseline_phone_24" />

            <TextView
                android:id="@+id/txt_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_5"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:text="Chargement..."
                android:textColor="#000000"
                android:textSize="18sp" />
            <View
                android:id="@+id/divider_6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/txt_6"
                android:background="@android:color/darker_gray"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>